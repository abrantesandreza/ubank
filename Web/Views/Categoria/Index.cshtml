@* IEnumerable de Categoria *@

<div class="contanier p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h4 class="text-white-65">Categorias</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categoria" asp-action="MostrarViewCadastrar" class="btn btn-light">Criar nova categoria</a>
        </div>
    </div>
    <br /><br />
</div>

<script src="~/js/Pages/categoria.js" asp-append-version="true"></script>
<script>
    categoria.init({
        urls: {
            index: '@Url.Action("Index", "Categoria")',
            mostrarViewCadastrar: '@Url.Action("MostrarViewCadastrar", "Categoria")',
            cadastrar: '@Url.Action("Cadastrar", "Categoria")'
        }
    });
</script>
