@model Categoria

<form id="formEditarCategoria">
    <div class="border-bottom border-1 border-secondary mt-5">
        <h4 class="text-white-50">Editar categoria</h4>
    </div>
    @*<div asp-validation-summary="All"></div>*@   
    <input asp-for="Id" hidden />     
    <div class="mb-0">
        <label class="col-form-label mt-4" asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="mt-0">
        <label class="col-form-label mt-4" asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="mt-0">
        <label class="col-form-label mt-4" asp-for="Grupo"></label>
        <input asp-for="Grupo" class="form-control" />
    </div>
    <div class="mt-4">
        <button type="button" class="btn btn-success" style="width:150px" onclick="categoria.Editar(@Model.Id)">Editar</button>
        <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Voltar para lista
        </a>
    </div>
</form>

<script src="~/js/Pages/categoria.js" asp-append-version="true"></script>
<script>
    categoria.init({
        urls: {
            index: '@Url.Action("Index", "Categoria")',
            editar: '@Url.Action("Editar", "Categoria")'
        }
    });
</script>
